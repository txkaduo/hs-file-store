name:                file-store
version:             0.3.0.0
-- synopsis:            
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Gilbert Fine
maintainer:          gilbert.fine@gmail.com
-- copyright:           
-- category:            
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     FileStore.Types
                       FileStore.LocalFile
                       FileStore.Qiniu
                       FileStore.Function
                       FileStore.Default
  -- other-modules:       
  default-extensions:  TemplateHaskell
                       QuasiQuotes
                       OverloadedStrings
                       NoImplicitPrelude
                       CPP
                       MultiParamTypeClasses
                       TypeFamilies
                       GADTs
                       GeneralizedNewtypeDeriving
                       FlexibleContexts
                       FlexibleInstances
                       EmptyDataDecls
                       TupleSections
                       RankNTypes
                       ConstraintKinds

  build-depends:       base >=4 && <5
                     , classy-prelude
                     , bytestring
                     , base64-bytestring
                     , byteable
                     , monad-logger
                     , transformers
                     , mtl
                     , exceptions
                     , mime-types
                     , directory
                     , filepath
                     , unix
                     , time
                     , lens
                     , http-client
                     , random

                     -- require patched version: export seshManager
                     , wreq

                     , persistent
                     , safecopy
                     , hash-tx-utils
                     , qiniu-utils >= 0.6
                     , parsec-tx-utils >= 0.3

  -- hs-source-dirs:      
  default-language:    Haskell2010

  ghc-options:         -Wall
